        "custom_liquid_kKPgLF": {
          "type": "custom-liquid",
          "settings": {
            "custom_liquid": "<style>\n  /* Card-Look für die Triggerliste */\n  .cg-card{\n    background:#fff;\n    border:1px solid #e5e7eb;\n    border-radius:12px;\n    overflow:hidden;\n  }\n  .cg-info-item{\n    width:100%;\n    display:flex;justify-content:space-between;align-items:center;gap:12px;\n    padding:16px 18px;font-weight:600;background:transparent;border:0;border-bottom:1px solid #eee;\n    cursor:pointer;text-align:left;\n  }\n  .cg-info-item:last-child{border-bottom:0}\n  .cg-info-item:focus-visible{outline:2px solid #111;outline-offset:2px;border-radius:6px}\n  .cg-info-item .label{flex:1}\n  .cg-info-item .chev{font-size:18px;line-height:1;opacity:.6}\n\n  /* Overlay dimmt die ganze Seite inkl. Header */\n  .cg-overlay{\n    position:fixed;inset:0;background:rgba(17,17,17,.55);\n    opacity:0;transition:opacity .25s ease;\n    z-index:2147483000;   /* sehr hoch, über Header/Cookie-Bar */\n    pointer-events:none;\n  }\n  .cg-overlay.open{opacity:1;pointer-events:auto}\n\n  /* Offcanvas rechts */\n  .cg-drawer{\n    position:fixed;top:0;right:0;height:100vh;width:min(560px,100%);\n    background:#fff;box-shadow:-2px 0 24px rgba(0,0,0,.18);\n    transform:translateX(100%);transition:transform .3s ease;\n    z-index:2147483001;   /* höher als Overlay */\n    display:flex;flex-direction:column;\n  }\n  .cg-drawer.open{transform:translateX(0)}\n\n  /* Drawer-Header */\n  .cg-drawer-header{\n    display:flex;align-items:center;justify-content:space-between;gap:12px;\n    padding:20px 24px;border-bottom:1px solid #eee;position:sticky;top:0;background:#fff;\n  }\n  .cg-drawer-title{font-size:18px;font-weight:700;margin:0}\n  .cg-drawer-close{background:transparent;border:0;font-size:28px;line-height:1;cursor:pointer}\n\n  /* Drawer-Inhalt */\n  .cg-drawer-body{padding:20px 24px;overflow:auto;line-height:1.6}\n  .cg-drawer-body p{margin:0 0 12px}\n  .cg-drawer-body ul{margin:0 0 12px 18px}\n</style>\n\n<!-- Trigger-Liste -->\n<div class=\"cg-card\">\n  <button class=\"cg-info-item\" type=\"button\" data-drawer-target=\"desc-drawer\">\n    <span class=\"label\">Produktbeschreibung</span><span class=\"chev\">›</span>\n  </button>\n\n  {% if product.metafields.custom.herstellerinformationen\n     or product.metafields.custom.importeur\n     or product.metafields.custom.eu_verantwortliche_person %}\n  <button class=\"cg-info-item\" type=\"button\" data-drawer-target=\"vendor-drawer\">\n    <span class=\"label\">Herstellerinformationen</span><span class=\"chev\">›</span>\n  </button>\n  {% endif %}\n</div>\n\n<!-- Overlay -->\n<div class=\"cg-overlay\" data-overlay hidden></div>\n\n<!-- Drawer: Beschreibung -->\n<aside id=\"desc-drawer\" class=\"cg-drawer\" role=\"dialog\" aria-modal=\"true\" aria-labelledby=\"desc-title\" hidden>\n  <header class=\"cg-drawer-header\">\n    <h3 id=\"desc-title\" class=\"cg-drawer-title\">Produktbeschreibung</h3>\n    <button class=\"cg-drawer-close\" type=\"button\" data-drawer-close aria-label=\"Schließen\">×</button>\n  </header>\n  <div class=\"cg-drawer-body\">\n    {{ product.description }}\n  </div>\n</aside>\n\n<!-- Drawer: Herstellerinfos -->\n{% if product.metafields.custom.herstellerinformationen\n   or product.metafields.custom.importeur\n   or product.metafields.custom.eu_verantwortliche_person %}\n<aside id=\"vendor-drawer\" class=\"cg-drawer\" role=\"dialog\" aria-modal=\"true\" aria-labelledby=\"vendor-title\" hidden>\n  <header class=\"cg-drawer-header\">\n    <h3 id=\"vendor-title\" class=\"cg-drawer-title\">Herstellerinformationen</h3>\n    <button class=\"cg-drawer-close\" type=\"button\" data-drawer-close aria-label=\"Schließen\">×</button>\n  </header>\n  <div class=\"cg-drawer-body\">\n    {% if product.metafields.custom.herstellerinformationen %}\n      <p><strong>Herstellerinformationen:</strong><br>{{ product.metafields.custom.herstellerinformationen | metafield_tag }}</p>\n    {% endif %}\n    {% if product.metafields.custom.importeur %}\n      <p><strong>Importeur:</strong><br>{{ product.metafields.custom.importeur | metafield_tag }}</p>\n    {% endif %}\n    {% if product.metafields.custom.eu_verantwortliche_person %}\n      <p><strong>EU-Verantwortliche Person:</strong><br>{{ product.metafields.custom.eu_verantwortliche_person | metafield_tag }}</p>\n    {% endif %}\n  </div>\n</aside>\n{% endif %}\n\n<script>\n(() => {\n  // --- Portal: Overlay & Drawer direkt an <body> hängen, damit kein Header/Wrapper drüber liegt ---\n  const overlay = document.querySelector('[data-overlay]');\n  const drawers = Array.from(document.querySelectorAll('.cg-drawer'));\n\n  function ensurePortal(node){\n    if(node && node.parentElement !== document.body){\n      document.body.appendChild(node);\n    }\n  }\n  ensurePortal(overlay);\n  drawers.forEach(ensurePortal);\n\n  const triggers = document.querySelectorAll('[data-drawer-target]');\n  let active = null, lastFocus = null;\n\n  function openDrawer(id){\n    const el = document.getElementById(id);\n    if(!el) return;\n\n    // vor jedem Öffnen sicherstellen, dass sie unter <body> hängen\n    ensurePortal(overlay);\n    ensurePortal(el);\n\n    lastFocus = document.activeElement;\n    el.hidden = false; overlay.hidden = false;\n    void el.offsetWidth; // reflow für saubere Transition\n    el.classList.add('open'); overlay.classList.add('open');\n\n    document.body.style.overflow = 'hidden';\n    (el.querySelector('[data-drawer-close]') || el).focus();\n    active = el;\n  }\n\n  function closeDrawer(){\n    if(!active) return;\n    active.classList.remove('open'); overlay.classList.remove('open');\n    setTimeout(() => {\n      active.hidden = true; overlay.hidden = true;\n      document.body.style.overflow = '';\n      try{ if(lastFocus) lastFocus.focus(); }catch(e){}\n      active = null;\n    }, 300);\n  }\n\n  // Events\n  triggers.forEach(btn => btn.addEventListener('click', () => openDrawer(btn.dataset.drawerTarget)));\n  document.querySelectorAll('[data-drawer-close]').forEach(x => x.addEventListener('click', closeDrawer));\n  overlay.addEventListener('click', closeDrawer);\n  document.addEventListener('keydown', e => { if(e.key === 'Escape') closeDrawer(); });\n\n  // Falls der Theme-Editor Sektionen neu rendert -> erneut portalen\n  document.addEventListener('shopify:section:load', () => {\n    ensurePortal(document.querySelector('[data-overlay]'));\n    document.querySelectorAll('.cg-drawer').forEach(ensurePortal);\n  });\n})();\n</script>"
          }
