<style>
  .error-code {
    color: rgba(var(--text-color) / 0.4);
    font-size: 9.6rem;
    line-height: 1;
  }

  .error-image {
    width: 400px;
    height: 400px;
    max-width: 100%;
    object-fit: contain;
    margin: -5px auto;
    display: block;
  }
</style>

<div class="container text-center">
  <p class="error-code mb-0 font-bold">404</p>
  <img src="https://cdn.shopify.com/s/files/1/0816/6368/9043/files/hund-404.png?v=1754399368" alt="Hund mit Kabel"class="error-image">
  <h1 class="h4 text-center">{{ 'templates.404.title' | t }}</h1>
  <p>{{ 'templates.404.subtext' | t }}</p>
  <p class="mt-12">
    <a class="btn btn--primary" href="{{ routes.root_url }}">{{ 'templates.404.link' | t }}</a>
  </p>
</div>

{% schema %}
{
  "name": "404",
  "class": "cc-main-404 section section--template"
}
{% endschema %}
